<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/trainingPageLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appMainColor"
    android:orientation="vertical"
    android:weightSum="30">

   <ImageButton
       android:id="@+id/backButtonSettingsPage"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:contentDescription="@string/back"
       android:onClick="onBackTrainingButtonPressed"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:srcCompat="@android:drawable/ic_menu_revert" />

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:baselineAligned="false"
       android:orientation="horizontal"
       android:layout_margin="5dp">

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_weight="4"
          android:orientation="vertical">

         <TableRow
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="15"
                android:adjustViewBounds="true"
                android:background="@color/appMainColor"
                android:contentDescription="@string/heartrate"
                android:padding="6dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/icon_trainingpage__heart" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:padding="30dp"
                android:textAlignment="center"
                android:textColor="@color/blackColor"
                android:textSize="20sp"
                android:text="@string/heartrate"/>
         </TableRow>

         <TableRow
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:weightSum="12">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="11"
                android:adjustViewBounds="true"
                android:background="@color/appMainColor"
                android:contentDescription="@string/speedrate"
                android:padding="3dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/icon_trainingpage__speed" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:padding="30dp"
                android:textAlignment="center"
                android:textColor="@color/blackColor"
                android:textSize="20sp"
                android:text="@string/speedrate"/>
         </TableRow>

         <TableRow
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:weightSum="6">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:adjustViewBounds="true"
                android:padding="3dp"
                android:scaleType="fitCenter"
                android:background="@color/appMainColor"
                android:contentDescription="@string/duration"
                app:srcCompat="@drawable/icon_trainingpage__cadence" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:padding="30dp"
                android:textAlignment="center"
                android:textColor="@color/blackColor"
                android:textSize="20sp"
                android:text="@string/cadencerate" />
         </TableRow>

      </LinearLayout>

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_weight="4"
          android:orientation="vertical">

         <TableRow
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="15"
                android:adjustViewBounds="true"
                android:background="@color/appMainColor"
                android:contentDescription="@string/avgheartrate"
                android:padding="6dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/icon_trainingpage_avgheart" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:padding="30dp"
                android:text="@string/avgheartrate"
                android:textAlignment="center"
                android:textColor="@color/blackColor"
                android:textSize="20sp" />
         </TableRow>

         <TableRow
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:weightSum="12">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="11"
                android:adjustViewBounds="true"
                android:padding="3dp"
                android:scaleType="fitCenter"
                android:background="@color/appMainColor"
                android:contentDescription="@string/avgspeed"
                app:srcCompat="@drawable/icon_trainingpage_avgspeed" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:padding="30dp"
                android:textAlignment="center"
                android:textColor="@color/blackColor"
                android:textSize="20sp"
                android:text="@string/avgspeed"/>
         </TableRow>

         <TableRow
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:weightSum="6">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:adjustViewBounds="true"
                android:background="@color/appMainColor"
                android:contentDescription="@string/avgcadencerate"
                android:padding="3dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/icon_trainingpage_avgcadence" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="30dp"
                android:gravity="center_horizontal"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="@color/blackColor"
                android:text="@string/avgcadencerate" />
         </TableRow>
      </LinearLayout>
   </LinearLayout>

   <TableRow
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_weight="3">

      <ImageView
          android:id="@+id/imageView0"
          android:layout_width="87dp"
          android:layout_height="match_parent"
          android:layout_weight="3"
          android:adjustViewBounds="true"
          android:background="@color/appMainColor"
          android:contentDescription="@string/duration"
          android:padding="3dp"
          android:scaleType="fitCenter"
          app:srcCompat="@drawable/icon_trainingpage_duration" />

      <TextView
          android:id="@+id/textView15"
          android:layout_width="361dp"
          android:layout_height="match_parent"
          android:gravity="center_horizontal"
          android:padding="10dp"
          android:text="@string/duration"
          android:textAlignment="center"
          android:textColor="@color/blackColor"
          android:textSize="25sp" />
   </TableRow>

   <ImageView
       android:id="@+id/imageView2"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_weight="24"
       android:layout_margin="5dp"
       android:adjustViewBounds="true"
       android:background="@color/appMainColor"
       android:contentDescription="@string/trainingprogress"
       android:padding="5dp"
       android:scaleType="fitCenter"
       app:srcCompat="@drawable/icon_trainingpage_graphicbar" />

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:weightSum="6">

      <TextView
          android:id="@+id/textView6"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="2"
          android:gravity="center_horizontal"
          android:textAlignment="center"
          android:textColor="@color/blackColor"
          android:text="@string/trainingstop"
          android:padding="5dp"
          android:textSize="20sp" />

      <TextView
          android:id="@+id/textView7"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="2"
          android:gravity="center_horizontal"
          android:padding="5dp"
          android:text="@string/trainingpouse"
          android:textAlignment="center"
          android:textColor="@color/blackColor"
          android:textSize="20sp"/>

      <TextView
          android:id="@+id/textView2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="2"
          android:gravity="center_horizontal"
          android:padding="5dp"
          android:text="@string/trainingresume"
          android:textAlignment="center"
          android:textColor="@color/blackColor"
          android:textSize="20sp" />

   </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">

      <ImageButton
          android:id="@+id/imageStopButton"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="11"
          android:padding="28dp"
          android:adjustViewBounds="true"
          android:scaleType="fitCenter"
          android:background="@color/appMainColor"
          android:contentDescription="@string/trainingstop"
          app:srcCompat="@drawable/icon_trainingpage_stop"
          android:layout_margin="3dp"/>

      <ImageButton
          android:id="@+id/imagePouseButton"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="14"
          android:padding="30dp"
          android:adjustViewBounds="true"
          android:scaleType="fitCenter"
          android:background="@color/appMainColor"
          android:contentDescription="@string/trainingpouse"
          app:srcCompat="@drawable/icon_trainingpage_pause"
          android:layout_margin="3dp"/>

      <ImageButton
          android:id="@+id/imageStartResumeButton"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="10"
          android:adjustViewBounds="true"
          android:background="@color/appMainColor"
          android:contentDescription="@string/trainingresume"
          android:padding="35dp"
          android:scaleType="fitCenter"
          app:srcCompat="@drawable/icon_trainingpage_play"
          android:layout_margin="3dp" />
   </LinearLayout>
</LinearLayout>