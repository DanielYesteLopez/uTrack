<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/trainingPageLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appOrangeMainColor"
    android:orientation="vertical"
    android:weightSum="30">

   <ImageButton
       android:id="@+id/backButtonSettingsPage"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_weight="1"
       android:contentDescription="@string/back"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:srcCompat="@android:drawable/ic_menu_revert" />

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_weight="18"
       android:baselineAligned="false"
       android:orientation="horizontal"
       android:weightSum="2">

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:orientation="vertical"
          android:weightSum="6">

         <TableRow
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_weight="2"
             android:weightSum="5">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:adjustViewBounds="true"
                android:background="@color/appOrangeMainColor"
                android:contentDescription="@string/heartrate"
                android:padding="20dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/icon_heart_trainingpage" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="40dp"
                android:text="@string/heartrate" />
         </TableRow>

         <TableRow
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_weight="2"
             android:weightSum="5">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:adjustViewBounds="true"
                android:background="@color/appOrangeMainColor"
                android:contentDescription="@string/speedrate"
                android:padding="20dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/icon_heart_trainingpage" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="40dp"
                android:text="@string/speedrate" />
         </TableRow>

         <TableRow
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_weight="2"
             android:weightSum="5">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:adjustViewBounds="true"
                android:background="@color/appOrangeMainColor"
                android:contentDescription="@string/duracion"
                android:padding="20dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/icon_heart_trainingpage" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="40dp"
                android:text="@string/duracion" />
         </TableRow>

      </LinearLayout>

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:orientation="vertical"
          android:weightSum="6">

         <TableRow
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_weight="2"
             android:weightSum="5">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:adjustViewBounds="true"
                android:background="@color/appOrangeMainColor"
                android:contentDescription="@string/cadencerate"
                android:padding="20dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/icon_heart_trainingpage" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="40dp"
                android:text="@string/cadencerate" />
         </TableRow>

         <TableRow
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_weight="2"
             android:weightSum="5">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:adjustViewBounds="true"
                android:background="@color/appOrangeMainColor"
                android:contentDescription="@string/avgspeed"
                android:padding="20dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/icon_heart_trainingpage" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="40dp"
                android:text="@string/avgspeed" />
         </TableRow>

         <TableRow
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_weight="2"
             android:weightSum="5">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:adjustViewBounds="true"
                android:background="@color/appOrangeMainColor"
                android:contentDescription="@string/maxspeed"
                android:padding="20dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/icon_heart_trainingpage" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="40dp"
                android:text="@string/maxspeed" />
         </TableRow>
      </LinearLayout>
   </LinearLayout>

   <ImageView
       android:id="@+id/imageView2"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_weight="4"
       android:adjustViewBounds="true"
       android:background="@color/appOrangeMainColor"
       android:contentDescription="@string/trainingprogress"
       android:padding="10dp"
       android:scaleType="fitCenter"
       app:srcCompat="@drawable/icon_graphicbar_trainingpage" />

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_weight="0"
       android:orientation="horizontal"
       android:weightSum="6">

      <TextView
          android:id="@+id/textView6"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="2"
          android:gravity="center_horizontal"
          android:padding="5dp"
          android:text="@string/trainingstop"
          android:textAlignment="center"
          android:textColor="@color/blackColor"
          android:textSize="20sp" />

      <TextView
          android:id="@+id/textView7"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="2"
          android:gravity="center_horizontal"
          android:padding="5dp"
          android:text="@string/trainingpouse"
          android:textAlignment="center"
          android:textColor="@color/blackColor"
          android:textSize="20sp" />

      <TextView
          android:id="@+id/textView2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="2"
          android:gravity="center_horizontal"
          android:padding="5dp"
          android:text="@string/trainingresume"
          android:textAlignment="center"
          android:textColor="@color/blackColor"
          android:textSize="20sp" />
   </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_weight="7"
       android:orientation="horizontal"
       android:weightSum="6">

      <ImageButton
          android:id="@+id/imageStopButton"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="2"
          android:adjustViewBounds="true"
          android:background="@color/appOrangeMainColor"
          android:contentDescription="@string/trainingstop"
          android:padding="20dp"
          android:scaleType="fitCenter"
          app:srcCompat="@drawable/icon_stop_trainingpage" />

      <ImageButton
          android:id="@+id/imagePouseButton"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"

          android:layout_weight="2"
          android:adjustViewBounds="true"
          android:background="@color/appOrangeMainColor"
          android:contentDescription="@string/trainingpouse"
          android:padding="20dp"
          android:scaleType="fitCenter"
          app:srcCompat="@drawable/icon_pouse_trainingpage" />

      <ImageButton
          android:id="@+id/imageStartResumeButton"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="2"
          android:adjustViewBounds="true"
          android:background="@color/appOrangeMainColor"
          android:contentDescription="@string/trainingresume"
          android:padding="20dp"
          android:scaleType="fitCenter"
          app:srcCompat="@drawable/icon_play_trainingpage" />
   </LinearLayout>
</LinearLayout>