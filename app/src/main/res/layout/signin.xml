<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/signInLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appMainColor">

    <Button
        android:id="@+id/signInToSignUpButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signUpText2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/whiteColor"
        android:ems="10"
        android:fontFamily="@font/audiowide"
        android:onClick="onToSignUpButtonPressed"
        android:text="@string/signup"
        android:textColor="@color/textMainColor" />

    <EditText
        android:id="@+id/signupUsername2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="30dp"
        android:autofillHints="@string/username"
        android:background="@color/whiteColor"
        android:ems="10"
        android:fontFamily="@font/audiowide"
        android:hint="@string/username"
        android:inputType="textPersonName"
        android:textColor="@color/textMainColor" />

    <EditText
        android:id="@+id/signupPassword2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/signupUsername2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="25dp"
        android:autofillHints="@string/password"
        android:background="@color/whiteColor"
        android:ems="10"
        android:fontFamily="@font/audiowide"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:textColor="@color/textMainColor" />

    <Button
        android:id="@+id/signupbutton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signupPassword2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="118dp"
        android:layout_marginLeft="118dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="125dp"
        android:layout_marginRight="125dp"
        android:background="@color/whiteColor"
        android:ems="10"
        android:onClick="onToSignInButtonPressed"
        android:fontFamily="@font/audiowide"
        android:gravity="center"
        android:text="@string/signin"
        android:textColor="@color/textMainColor" />

    <TextView
        android:id="@+id/signUpText2"
        style="@style/WhiteText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signupbutton2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="350dp"
        android:ems="10"
        android:text="@string/accountmessage1" />

</RelativeLayout>