        app:srcCompat="@drawable/icon_data_mainpage" />

    <ImageButton
        android:id="@+id/settingsButtonMainpage"
        android:layout_width="70dp"
        android:layout_height="61dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
