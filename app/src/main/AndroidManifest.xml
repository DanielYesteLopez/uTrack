<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.utrack">

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_app_utrack"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/SplashTheme">

        <activity
            android:name=".SignUpActivity"
            android:noHistory="true"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".SignInActivity"
            android:noHistory="true" />
        <activity android:name=".TrainingActivity"
            android:noHistory="true"/>
        <activity android:name=".DataActivity" />
        <activity android:name=".AccountSettingsActivity" />
        <activity android:name=".UserSettingsActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".SettingsActivity" />
        <activity android:name=".InformationActivity" />
        <activity android:name=".ShowExerciseFragment" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>